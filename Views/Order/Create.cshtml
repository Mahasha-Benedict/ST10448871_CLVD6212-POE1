@model ABCRetailers.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "RowKey", "Name"))"></select>
    </div>

    <div class="form-group">
        <label>Product</label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "RowKey", "ProductName"))"></select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <input type="hidden" asp-for="Status" value="Pending" />

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
