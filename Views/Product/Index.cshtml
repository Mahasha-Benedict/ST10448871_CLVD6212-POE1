@model IEnumerable<ABCRetailers.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.ProductName" style="width:80px; height:80px; object-fit:cover;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockAvailable</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.RowKey" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.RowKey" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
